<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationActivity"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewConversationActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:stackFromBottom="true" />

    <LinearLayout
        android:id="@+id/linearLayoutHorizontalConversationActivityInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtConversationActivityMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="3"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Your message goes here"
            android:importantForAutofill="no"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnConversationActivitySend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Send" />
    </LinearLayout>
</LinearLayout>